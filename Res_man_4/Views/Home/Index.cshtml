@{
    /**/

    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Res_man_4.Models
@model PagedList.IPagedList<Res_man_4.Models.MONAN>
@using PagedList;
@using PagedList.Mvc;
        <div class="amado-pro-catagory clearfix" style="position:relative;">
            <!-- Single Catagory -->
            @foreach (var item in Model)
            {
                <div class="single-products-catagory clearfix">
                    <a href="shop.html">
                        <img src="~/Areas/Admin/UpLoad/HinhMonAn/@item.hinhma" style="width: 100%;height: 450px;display: flex;object-fit: cover;flex-direction: column;padding: 5px;border-radius: 10px;"  alt="">
                        <!-- Hover Content -->
                        <div class="hover-content">
                            <div class="line"></div>
                            <p>@item.giamonan</p>
                            <h4 style="color:yellow;">@item.tenmonan</h4>
                        </div>
                    </a>
                </div>
            }
        </div>
        <style>
            a {
                padding: 5px;
            }
        </style>
@if (Model.PageCount > 1)
{
    <span>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount </span>
    <div class="div-pagination">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
}