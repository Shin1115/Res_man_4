@using Res_man_4.Models
@model PagedList.IPagedList<Res_man_4.Models.MONAN>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Blogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="blogs" id="blogs">

    <div class="heading">
        <span>our blogs</span>
        <h3>our daily stories</h3>
    </div>

    <div class="box-container">

        @foreach (var item in Model)
        {
            <div class="box">
                <div class="image">
                    <h3> <i class="fas fa-calendar"></i> 21st may, 2021 </h3>
                    <img src="~/Areas/Admin/UpLoad/HinhMonAn/@item.hinhma" alt="">
                </div>
                <div class="content">
                    <h3>@item.tenmonan</h3>
                    <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Autem, earum.</p>
                    <a href="#" class="btn">read more</a>
                </div>
            </div>
        }
    </div>
</section>
<style>
    a{
        padding:5px;
    }
</style>
@if (Model.PageCount > 1)
{
    <span>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount </span>
    <div class="col-sm-10">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
}

