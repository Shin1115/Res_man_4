@*@model IEnumerable<Res_man_4.Models.NHANVIEN>*@
@using Res_man_4.Models
@model PagedList.IPagedList<Res_man_4.Models.NHANVIEN>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
}

<h2>Danh Sách Nhân Viên</h2>

@*<p>
        @Html.ActionLink("Create New", "Create", new { @styles="" })
    </p>*@
<form action="/Admin/NHANVIENprofile/Index" method="post">
    <a style="text-align:center; display:block;  float:right;" href="/Admin/NHANVIENprofile/Create" class="col-sm-1 btn btn-success">Thêm mới </a>
</form>
<table class="table table-bordered table-striped">
    <tr>
        <th scope="col">
            Mã Nhân Viên
        </th>
        <th scope="col">
            Chức Vụ
        </th>
        <th scope="col">
            Ca Làm
        </th>
        <th scope="col">
            Khu Vực
        </th>
        <th scope="col">
            Địa chỉ
        </th>
        <th scope="col">
            Số Điện Thoại
        </th>
        <th scope="col"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tennv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chucvu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.calam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.khuvuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diachi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sodienthoai)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.TAIKHOAN.email)
                </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.manv }) |
                @Html.ActionLink("Details", "Details", new { id = item.manv }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.manv })
            </td>
        </tr>
    }
</table>
@if (Model.PageCount > 1)
{
    <span>Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount </span>
    <div class="col-sm-10">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
}
